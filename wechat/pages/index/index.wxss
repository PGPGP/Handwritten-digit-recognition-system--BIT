@import "/images/iconfont1.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.bg{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%; /*宽度 高度*/
  /*z-index 较大的元素会覆盖较小的元素在上层进行显示*/
  z-index: -1;
  
}
.btn1{
   border:3px burlywood;
   border-color:burlywood;
   border-width:3px;
   /*background-color: transparent;*/
